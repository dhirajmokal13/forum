<%- include('./partials/header.ejs') %>
  <!-- slides start here -->
  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <%let first_slide=true%>
        <%catogories.forEach((item)=>{%>
          <div class="carousel-item <%if(first_slide == true){%>active<%}%>">
            <img
              src="/images/<%-item.images%>"
              class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
              <h5>
                <a class="btn btn-success my-2" href="catogories/<%-item.cat_name%>/">Explore <%-item.cat_name%></a>
              </h5>
              <p>
                <%-item.info%>
              </p>
            </div>
          </div>
          <%first_slide=false%>
            <%})%>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <h3 class="my-5 text-center">Top Questions</h3>
  <!-- slides end here -->
  <div class="container">
    <!-- forum questios start here -->
    <div class="my-4">
      <%forum_questions.forEach((item)=>{%>
        <div class="card mb-3">
          <div class="card-header">
              <span class="text-primary"><%-item.uname%></span><span class="text-secondary">  At  </span> <span class="text-primary"><%- moment(new Date(item.dt)).format('D MMMM YY h:m A'); %></span> <span class="text-danger"><%-item.views%> Views</span>
            </div>
          <div class="card-body">
            <h5 class="card-title"><%-item.question_title.slice(0,100)%>....</h5>
            <p class="card-text"><%-item.question_body.slice(0,340)%>....</p>
            <a href="/forum/question/<%-item._id%>" class="btn btn-outline-success">Explore</a>
          </div>
        </div>
        <%})%>
    </div>
    <!-- forum questions end here -->
  </div>
  <%- include('./partials/footer.ejs') %>